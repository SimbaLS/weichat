.source>.box {
  float: left;
  width: 32%;
  margin-left: 1%;
  margin-bottom: 10rpx;
}
.dy_video .play {
  position: absolute;
  width: 88rpx;
  bottom: 50%;
  left: 50%;
  border-radius: 50%;
  z-index: 9;
  transform: translate(-50%, 50%);
}
.source {
  margin: 26rpx 0;
  position: relative;
  z-index: 10;
}
.source .video, .source video {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}
.box .weui-icon {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 15;
}
.source .weui-icon{
  width: 60rpx;
  height: 60rpx;
}
.source .weui-icon image{
  width: 100%;
  height: 100%
}

/* 悬浮 */

.page-bottom {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  z-index: 110;
  line-height: 1.4;
  align-items: center;
  padding: 30rpx 0;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -2px 4px 0px rgba(0, 0, 0, 0.04), 0px 2px 4px 0px rgba(0, 0, 0, 0.04);
}
.page-bottom .pic{
  background: #EC7259;
  padding: 16rpx;
  color: #fff;
}

.page-bottom .pic:first-child {
  margin-right: 124rpx;
  margin-left: 32rpx; 
}

.publish {
  width: 144rpx;
  height: 60rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(0, 10, 45, 1);
  line-height: 60rpx;
  background: linear-gradient(180deg, rgba(255, 222, 11, 1) 0%, rgba(255, 208, 9, 1) 100%);
  border-radius: 28rpx;
  text-align: center;
  margin-left: auto;
  margin-right: 32rpx;
}

.publish.disabled {
  background: #e1e1e1;
  color: #fff;
}
